# Restringir el acceso web directo a archivos sensibles y copias de seguridad.
<IfModule mod_authz_core.c>
    <FilesMatch "(?i)^(?:\.env(?:\..*)?|pepper.*\.php|virustotal_api_key\.php|wolfram_alpha_api_key\.php|wolfram_alpha_app_id\.php|constants\.php|connection\.php|security\.php|env_loader\.php|api_key\.js|.+\.sql)$">
        Require all denied
    </FilesMatch>
</IfModule>

<IfModule !mod_authz_core.c>
    <FilesMatch "(?i)^(?:\.env(?:\..*)?|pepper.*\.php|virustotal_api_key\.php|wolfram_alpha_api_key\.php|wolfram_alpha_app_id\.php|constants\.php|connection\.php|security\.php|env_loader\.php|api_key\.js|.+\.sql)$">
        Order Allow,Deny
        Deny from all
    </FilesMatch>
</IfModule>
